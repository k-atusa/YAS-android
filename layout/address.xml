<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <include layout="@layout/toolbar"/>

    <!-- My key -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"
        app:cardCornerRadius="16dp"
        android:layout_gravity="center"
        app:cardElevation="6dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginVertical="24dp"
        android:layout_marginHorizontal="16dp"
        style="@style/Widget.App.CardView.Outlined">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/address_regen0"
                    style="@style/Widget.App.FilledButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="regen"
                    android:text="Regen 2k"
                    android:textSize="18sp"
                    app:icon="@drawable/icon_process"
                    app:iconSize="24dp"
                    android:textAlignment="textEnd"
                    android:paddingHorizontal="12dp"
                    android:layout_marginHorizontal="8dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/address_regen1"
                    style="@style/Widget.App.FilledButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="regen"
                    android:text="Regen 4k"
                    android:textSize="18sp"
                    app:icon="@drawable/icon_process"
                    app:iconSize="24dp"
                    android:textAlignment="textEnd"
                    android:paddingHorizontal="12dp"
                    android:layout_marginHorizontal="8dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="my public key"
                    android:paddingVertical="4dp"
                    android:paddingHorizontal="4dp"
                    android:layout_marginHorizontal="8dp"
                    android:textColor="?attr/colorSecondary"/>

                <ImageButton
                    android:id="@+id/address_edit0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_edit"
                    android:background="@drawable/rectangle"
                    android:contentDescription="edit"
                    android:paddingVertical="4dp"
                    android:paddingHorizontal="20dp"
                    android:layout_marginHorizontal="8dp"
                    app:tint="?attr/colorPrimaryVariant" />

                <ImageButton
                    android:id="@+id/address_copy0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_copy"
                    android:background="@drawable/rectangle"
                    android:contentDescription="copy"
                    android:paddingVertical="4dp"
                    android:paddingHorizontal="20dp"
                    android:layout_marginHorizontal="8dp"
                    app:tint="?attr/colorPrimaryVariant" />
            </LinearLayout>

            <EditText
                android:id="@+id/address_text0"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/rectangle"
                android:padding="8dp"
                android:layout_margin="8dp"
                android:textSize="16sp"
                android:gravity="top"
                android:hint="my public key"
                android:textColorHint="?attr/colorSecondary"
                android:textColor="?attr/colorSecondary"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="my private key"
                    android:paddingVertical="4dp"
                    android:paddingHorizontal="4dp"
                    android:layout_marginHorizontal="8dp"
                    android:textColor="?attr/colorSecondary"/>

                <ImageButton
                    android:id="@+id/address_edit1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_edit"
                    android:background="@drawable/rectangle"
                    android:contentDescription="edit"
                    android:paddingVertical="4dp"
                    android:paddingHorizontal="20dp"
                    android:layout_marginHorizontal="8dp"
                    app:tint="?attr/colorPrimaryVariant" />

                <ImageButton
                    android:id="@+id/address_copy1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_copy"
                    android:background="@drawable/rectangle"
                    android:contentDescription="copy"
                    android:paddingVertical="4dp"
                    android:paddingHorizontal="20dp"
                    android:layout_marginHorizontal="8dp"
                    app:tint="?attr/colorPrimaryVariant" />
            </LinearLayout>

            <EditText
                android:id="@+id/address_text1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/rectangle"
                android:padding="8dp"
                android:layout_margin="8dp"
                android:textSize="16sp"
                android:gravity="top"
                android:hint="my private key"
                android:textColorHint="?attr/colorSecondary"
                android:textColor="?attr/colorSecondary"/>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Public key -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"
        app:cardCornerRadius="16dp"
        android:layout_gravity="center"
        app:cardElevation="6dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="60dp"
        android:layout_marginHorizontal="16dp"
        style="@style/Widget.App.CardView.Outlined">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/address_addkey"
                    style="@style/Widget.App.FilledButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="addkey"
                    android:text="Add Key"
                    android:textSize="18sp"
                    app:icon="@drawable/icon_add"
                    app:iconSize="24dp"
                    android:textAlignment="textEnd"
                    android:paddingHorizontal="12dp"
                    android:layout_marginHorizontal="8dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/address_delete"
                    style="@style/Widget.App.FilledButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="delete"
                    android:text="Remove"
                    android:textSize="18sp"
                    app:icon="@drawable/icon_delete"
                    app:iconSize="24dp"
                    android:textAlignment="textEnd"
                    android:paddingHorizontal="12dp"
                    android:layout_marginHorizontal="8dp"/>
            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.App.TextInputLayout.Dropdown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Public Key"
                android:textSize="18sp"
                android:paddingHorizontal="16dp">
                <AutoCompleteTextView
                    android:id="@+id/address_key"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"/>
            </com.google.android.material.textfield.TextInputLayout>

            <EditText
                android:id="@+id/address_keyname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:hint="key name"
                android:padding="8dp"
                android:layout_marginHorizontal="16dp"
                android:textColorHint="?attr/colorSecondary"
                android:textColor="?attr/colorSecondary"/>

            <EditText
                android:id="@+id/address_keydata"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rectangle"
                android:padding="8dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="8dp"
                android:textSize="16sp"
                android:gravity="top"
                android:hint="public key data"
                android:textColorHint="?attr/colorSecondary"
                android:textColor="?attr/colorSecondary"/>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>