<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <include layout="@layout/toolbar"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/menu_enc"
        style="@style/Widget.App.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="enc"
        android:text="Manual Encryption   (1)"
        android:textSize="20sp"
        app:icon="@drawable/icon_lock"
        app:iconPadding="8dp"
        app:iconSize="32dp"
        android:textAlignment="textEnd"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="16dp"
        android:paddingHorizontal="24dp"
        android:paddingVertical="8dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/menu_dec"
        style="@style/Widget.App.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="textEnd"
        android:contentDescription="dec"
        android:text="Manual Decryption   (2)"
        android:textSize="20sp"
        app:icon="@drawable/icon_lock"
        app:iconPadding="8dp"
        app:iconSize="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp"
        android:paddingHorizontal="24dp"
        android:paddingVertical="8dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/menu_send"
        style="@style/Widget.App.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="textEnd"
        android:contentDescription="send"
        android:text="Automatic Send   (3)"
        android:textSize="20sp"
        app:icon="@drawable/icon_send"
        app:iconPadding="8dp"
        app:iconSize="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp"
        android:paddingHorizontal="24dp"
        android:paddingVertical="8dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/menu_receive"
        style="@style/Widget.App.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="textEnd"
        android:contentDescription="receive"
        android:text="Automatic Receive   (4)"
        android:textSize="20sp"
        app:icon="@drawable/icon_send"
        app:iconPadding="8dp"
        app:iconSize="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp"
        android:paddingHorizontal="24dp"
        android:paddingVertical="8dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/menu_penc"
        style="@style/Widget.App.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="textEnd"
        android:contentDescription="pend"
        android:text="PGP Text Encryption   (5)"
        android:textSize="20sp"
        app:icon="@drawable/icon_shield"
        app:iconPadding="8dp"
        app:iconSize="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp"
        android:paddingHorizontal="24dp"
        android:paddingVertical="8dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/menu_pdec"
        style="@style/Widget.App.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="textEnd"
        android:contentDescription="pdec"
        android:text="PGP Text Decryption   (6)"
        android:textSize="20sp"
        app:icon="@drawable/icon_shield"
        app:iconPadding="8dp"
        app:iconSize="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp"
        android:paddingHorizontal="24dp"
        android:paddingVertical="8dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/menu_psend"
        style="@style/Widget.App.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="textEnd"
        android:contentDescription="psend"
        android:text="PGP File Encryption   (7)"
        android:textSize="20sp"
        app:icon="@drawable/icon_shield"
        app:iconPadding="8dp"
        app:iconSize="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp"
        android:paddingHorizontal="24dp"
        android:paddingVertical="8dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/menu_preceive"
        style="@style/Widget.App.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="textEnd"
        android:contentDescription="preceive"
        android:text="PGP File Decryption   (8)"
        android:textSize="20sp"
        app:icon="@drawable/icon_shield"
        app:iconPadding="8dp"
        app:iconSize="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp"
        android:paddingHorizontal="24dp"
        android:paddingVertical="8dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/menu_key"
        style="@style/Widget.App.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="textEnd"
        android:contentDescription="key"
        android:text="Key Management   (9)"
        android:textSize="20sp"
        app:icon="@drawable/icon_key"
        app:iconPadding="8dp"
        app:iconSize="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp"
        android:paddingHorizontal="24dp"
        android:paddingVertical="8dp"/>

</LinearLayout>